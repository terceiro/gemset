#!/usr/bin/rake -f

require 'rake/testtask'

task :default => :test

testdir = File.dirname(__FILE__)

Rake::TestTask.new do |t|
  t.libs << testdir
  test_files = FileList["#{testdir}/*_test.rb"]
  raise 'No test files!' if test_files.empty?
  t.test_files = test_files
  t.verbose = true
end

# vim: ft=ruby
